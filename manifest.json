{
  "manifest_version": 3,
  "name": "Sahibinden Harita Filtresi",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://www.sahibinden.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.sahibinden.com/*"],
      "js": ["content.js"]
    }
  ]
}
